---
import "@fontsource-variable/inter";
import "@fontsource/titan-one";

import "~/styles/globals.css";

import SVG from "~/components/SVG.astro";
import { SITE } from "~/const";

const title = "Kripika";
const description = "Kripika";
const url = SITE;
const og = `${SITE}/og.png`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={og} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={og} />
  </head>
  <body class="relative">
    <section class="h-8"></section>

    <main class="relative z-10">
      <section class="container mx-auto flex items-center justify-center px-8">
        <h1
          id="kripika"
          class="font-display font-normal text-primary-9 text-7xl md:text-8xl 2xl:text-9xl select-none"
          style={{ transform: `scale(0.95)` }}
        >
          Kripika
        </h1>
      </section>
      <section class="container mx-auto max-w-screen-md grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8 p-8 sm:p-12">
        <div
          id="card-1"
          class="relative w-auto h-auto aspect-w-3 aspect-h-5 select-none bg-neutral-1 border border-primary-9 rounded-3xl overflow-hidden shadow-xl"
          style={{ transform: `translateX(-20px) scale(0.96)` }}
        >
          <img alt="type-1" src="/type-1.webp" class="z-0 absolute inset-0" />
          <div
            class="z-10 absolute inset-x-0 top-auto bottom-0 flex items-center justify-center h-1/6 bg-black-9 text-white border-t border-t-white-9 backdrop-blur"
          >
            <div>
              <div class="mb-1 text-center font-bold text-xl md:text-2xl">Pentol</div>
              <div class="text-center font-medium text-lg md:text-xl">Rp5000</div>
            </div>
          </div>
        </div>
        <div
          id="card-2"
          class="relative w-auto h-auto aspect-w-3 aspect-h-5 select-none bg-neutral-1 border border-primary-9 rounded-3xl overflow-hidden shadow-xl"
          style={{ transform: `translateX(20px) scale(0.96)` }}
        >
          <img alt="type-2" src="/type-2.webp" class="z-0 absolute inset-0" />
          <div
            class="z-10 absolute inset-x-0 top-auto bottom-0 flex items-center justify-center h-1/6 bg-black-9 text-white border-t border-t-white-9 backdrop-blur"
          >
            <div>
              <div class="mb-1 text-center font-bold text-xl md:text-2xl">Pentol</div>
              <div class="text-center font-medium text-lg md:text-xl">Rp5000</div>
            </div>
          </div>
        </div>
      </section>
      <section class="container mx-auto flex items-center justify-center px-8">
        <a
          class="inline-flex items-center justify-center gap-2.5 outline-none select-none px-5 py-3 w-full sm:w-auto bg-primary-9 text-white rounded-full focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary-9 focus-visible:ring-offset-primary-1 shadow-xl"
          href={`https://wa.me/${import.meta.env.PUBLIC_WHATSAPP_1}`}
        >
          <span class="p-0.5">
            <svg role="img" viewBox="0 0 24 24" class="w-6 h-6 fill-current" xmlns="http://www.w3.org/2000/svg">
              <title>WhatsApp</title>
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
              ></path>
            </svg>
          </span>
          <span class="text-xl md:text-2xl">Pesan Sekarang</span>
        </a>
      </section>
    </main>

    <section class="h-8"></section>

    <div id="svg" class="z-0 fixed inset-0 opacity-20" style={{ transform: `scale(0.95)` }}>
      <SVG class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[200%] h-[200%] md:w-[150%] md:h-[150%]" />
    </div>
  </body>
</html>

<script>
  import { animate, spring } from "motion";

  animate(
    "#svg",
    {
      scale: [0.95, 1],
    },
    {
      delay: 0.1,
      easing: spring(),
    }
  );

  animate(
    "#kripika",
    {
      scale: [0.95, 1],
    },
    {
      delay: 0.1,
      easing: spring(),
    }
  );

  animate(
    "#card-1",
    {
      scale: [0.96, 1],
      x: [-20, 0],
    },
    {
      delay: 0.1,
      easing: spring(),
    }
  );

  animate(
    "#card-2",
    {
      scale: [0.96, 1],
      x: [20, 0],
    },
    {
      delay: 0.1,
      easing: spring(),
    }
  );
</script>
